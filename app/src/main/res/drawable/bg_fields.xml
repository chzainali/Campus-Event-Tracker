<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="180"
                android:endColor="@color/light_color"
                android:startColor="@color/dark_color" />
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/white" />

        </shape>
    </item>
</layer-list>